# Environment variables for configuration
# 
# FORCE_JAVAC = true if you do not want to use Maven (default Maven is used)
# JDK_BIN_PATH = path to java bin (default: /usr/bin/)

# Reference: http://stackoverflow.com/questions/59895/can-a-bash-script-tell-what-directory-its-stored-in
SOURCE="${BASH_SOURCE[0]}"
while [ -h "$SOURCE" ]; do
  DIR="$( cd -P "$( dirname "$SOURCE" )" && pwd )"
  SOURCE="$(readlink "$SOURCE")"
  [[ $SOURCE != /* ]] && SOURCE="$DIR/$SOURCE"
done
SCRIPT_DIR="$( cd -P "$( dirname "$SOURCE" )" && pwd )"

HOME=$SCRIPT_DIR/..

if `command -v "mvn" &> /dev/null` && ! [ "$FORCE_JAVAC" == "true" ] ;
then
	mvn -f $HOME/pom.xml install
else
	: ${JDK_BIN_PATH:="/usr/bin/"}
	
	$JDK_BIN_PATH/javac \
		-cp /usr/lib/hadoop-hdfs/lib/*:/usr/lib/hadoop/lib/*:/usr/lib/hadoop-hdfs/*:/usr/lib/hadoop/* \
		$HOME/src/main/java/ch/cern/db/*.java
	
	mkdir -p $HOME/target
	
	$JDK_BIN_PATH/jar cf $HOME/target/hdfs-metadata.jar -C $HOME/src/main/java/ .
fi

